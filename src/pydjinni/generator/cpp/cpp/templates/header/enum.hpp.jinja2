{% endblock %}

{% block content %}
{{ type_def.cpp.comment}}
enum class {{ type_def.cpp.name }} : int {
{% for item in type_def.items %}
    {% if item.comment %}
    {{ item.cpp.comment | indent(width=4) }}
    {% endif %}
    {{ item.cpp.name ~ ("," if not loop.last) }}
{% endfor %}
};

{% endblock %}
